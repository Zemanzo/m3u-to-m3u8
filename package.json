    "chalk": "^5.2.0",
    "cli-progress": "^3.11.2",
    "commander": "^10.0.0",
    "promptly": "^3.2.0",
    "sanitize-filename": "^1.6.3",
    "tslib": "~2.4",
    "xml2js": "^0.4.23"
